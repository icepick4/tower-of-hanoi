{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-trailing-spaces": [
            "error",
            {
                "ignoreComments": true
            }
        ],
        "no-irregular-whitespace": [
            "error",
            {
                "skipStrings": true
            }
        ],
        "quotes":[
            "error",
            "single"
        ],
        "indent":[
            "error",
            4
        ],
        "space-before-function-paren":"off"
    }
}
